@model IEnumerable<Trouvtou.Models.Objet>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Cr√©er un nouvel objet</a>
</p>
<form asp-controller="Objets" asp-action="Index" method="get">
    <p>
        Title: <input type="text" name="searchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.typeObjet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estConsultable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateDernierRangement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rangement)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.typeObjet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estConsultable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateDernierRangement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rangement.description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Modifier</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
